    <!-- connected -->
    
   <div class="container text-center">
    <h1>Hamza Personal Video Chat Application</h1>
    <h3>Video chat</h3>
   </div>
   <div class="container text-center">
        
        <label for="participants">Invite participants : </label><br />
        <textarea disabled id="participants" name="participants"></textarea><br />
        <label for="check">Invite participants</label>
        <input type="checkbox" id="checkbox" name="check"/>
   </div> 
   <div id="join-div" class="container justify-content-center p-3 m-3 text-center">
        <h2>Join meeting room</h2>
        <label for="room-id">Room Id : </label>
        <input type="text" id="roomid"   class="" name="room-id"/><br /><br />
        <button onclick="startMeeting()" type="button" class="btn btn-light">🏃‍♂️ Start meeting</button>
    </div>
    <div id="start-div" class="container justify-content-center p-3 m-3 text-center">
        <h2>Start a new Meeting</h2>
        
    <button onclick="startANewMeeting()" type="button" class="btn btn-light">➕ Start a new meeting</button>

    </div>

